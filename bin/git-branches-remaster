#!/bin/sh
#

set -e

for b in $(git branch | cut -c 3-); do
  [[ $b != master ]] && {
    git clean -fxd .
    git checkout -f $b
    git merge -s recursive -X patience -X ours master || {
      git clean . && git add -f . && git commit -m "Merge failure during $0" && git clean -fxd .
    }
  }
done
