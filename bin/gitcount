#!/bin/sh
  exec scala $0 $*
!#

import scala.sys.process._

val authors = Process("git log --format=%an").lines.toList.distinct.sorted
val commits = authors map (x => Process(Seq("git", "--no-pager", "log", "--oneline", "--author=" + x)).lines.size)
val list = authors zip commits sortBy (-_._2) map { case (k, v) => "%-20s%s".format(k, v) }

list foreach println
