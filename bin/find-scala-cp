#!/usr/bin/env bash
#

jbash_auto_args=1
source $(dirname $BASH_SOURCE)/../lib/jbash.sh

jbash_usage="[path]"
jbash_help=$(cat <<EOM
Prints the classpath used by the scala runner at the given path.
If given no argument, uses $(which scala).
EOM
)

program=${1:-$(which scala)}

if [[ ! $(which $program) ]]; then
  echo "No such file: $program"
  exit 1
fi

set-scala-path "$program"
set-scala-opts -nobootcp -usejavacp

run-scala-expr 'sys.props("java.class.path")'
