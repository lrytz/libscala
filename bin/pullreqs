#!/usr/bin/env bash
#

mkString () {
  local sep="$1"
  local first=1

  while read line; do
    if (( $first )); then
      first=0
      printf "%s" "$line"
    else
      printf "${sep}%s" "$line"
    fi
  done

  echo ""
}

cd $(dirname $0)/..
cp=$(find lib_managed -name '*.jar' | mkString ':'):target/scala-2.9.1/classes

scala29 -cp "$cp" improving.pullreq.Main "$@"
