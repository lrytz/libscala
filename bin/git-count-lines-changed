#!/usr/bin/env bash
#
# Generates a summary of added/deleted lines for the given
# author and commit range.

if [[ $# -ne 2 ]]; then
  echo "Usage: $0 <author> <commits>";
  exit 0;
fi

git --no-pager log \
  -C -M --numstat --pretty="%H" \
  --author="$1" "$2" \
  | "$(dirname $0)/git-sum-diffstats"
