alias g='git'
alias grh='git reset --hard'
alias grhh='git reset --hard head^'
alias grhchop='git reset --hard ; git chop'
alias gba='git branch -a'
alias gsr='git svn rebase'
alias gb='git branch -a | grep $*'
alias gc='git checkout $*'
alias gp='git pull /scala/trunk $*'
alias gitpatches='git format-patch --full-index --binary'
alias gm='git co master'
alias gmm='git merge master'
alias gam='git commit -a -m'
alias gdm='git diff master'
alias gds='git diff --stat=100,100'
alias gdsh='git diff --stat=100,100 head^'
alias gdsm='git diff --stat=100,100 master'
alias gdmm='git diff master | mate'
alias gdh='git diff head^ head'
alias gdhm='git diff head^ | mate'
alias grm='git rebase master'
alias grim='git rebase -i master'
alias gra='git rebase --abort'
alias gbag='git branch -a |grep'
alias gupd='git commit -a --amend -C head'
alias gfrr='git fetch . refs/remotes/*:refs/heads/*'
alias gfrro='git co HEAD^ && git fetch . refs/remotes/origin/*:refs/heads/* && git co master && git branch -D HEAD'
alias gitmo='git commit -a -m sync ; git push'
alias gvps='git verify-pack -v .git/objects/pack/pack-*.idx | sort -k3n'
alias git-svn-sha-pairs="git svn log --oneline --show-commit | cut -d '|' -f 1,2"
# alias gitsearch="git log --pretty=oneline -S'$*'"
alias pullup='git co master ; git pull ; git up'
alias gitgp='git gp ; github-update'
alias ttytter='rlwrap ttytter'
alias git-clear-javap-cache='git update-ref -d refs/notes/textconv/javap'
alias glnm='git lol --branches ^master'
alias gdm...='git diff master... -- src'
alias gdsm...='git diff --stat master... -- src'
alias git-desc='git describe --always'
alias git-slog='git log --no-merges ^master'

alias gh-commits='github network commits --nocache'
alias gh-list='github network list --nocache'
alias gh-fetch='github network fetch --nocache'
alias gh-applies='github network commits --applies'
